<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="282dp"
            android:layout_height="53dp"
            android:id="@+id/editTextSend"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="SEND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPost"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextSend" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.452"/>
    <Button
            android:text="get"
            android:layout_width="54dp"
            android:layout_height="33dp"
            android:id="@+id/buttonGet" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonPost" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <ListView
            android:layout_width="375dp"
            android:layout_height="459dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="124dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.6" android:id="@+id/listView"/>
    <TextView
            android:layout_width="72dp"
            android:layout_height="26dp"
            android:id="@+id/textViewLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/listView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextSend"
            app:layout_constraintStart_toStartOf="@+id/editTextSend" android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.538"/>
</android.support.constraint.ConstraintLayout>